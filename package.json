{
  "name": "clean-architecture-react-express-tic-tac-toe",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "node dist/src/main.js",
    "dev": "npm run build && concurrently --kill-others \"tsc -w -p .\" \"nodemon dist/src/main.js -e ts\"",
    "build": "tsc -p .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test:e2e": "jest --config ./jest-e2e.config.js",
    "ci:e2e": "start-server-and-test dev http://localhost:4000 test:e2e"
  },
  "dependencies": {
    "class-validator": "0.14.1",
    "cookie-parser": "1.4.6",
    "dotenv": "16.4.5",
    "express": "4.18.3",
    "kafkajs": "2.2.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.7",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "concurrently": "8.2.2",
    "eslint": "^8.56.0",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "start-server-and-test": "^2.0.3",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "typescript": "^5.2.2"
  }
}
